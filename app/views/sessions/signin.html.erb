<% content_for :title do "Sign In" end %>

<main class="form">
    <h2>Sign In</h2>

    <%= form_tag(create_session_path, method: 'post') do %>
        <div>
            <%= label_tag(:username)%>
            <%= label_tag(:password)%>
        </div>
        <div>
            <%= text_field_tag(:username)%>
            <%= password_field_tag(:password)%>
        </div>
        <p>
            <%= submit_tag("LOGIN")%>
        </p>
    <% end %>
</main>
