<% content_for :title do "Edit #{@post.title}" end %>

<main class="create_post">
    <%= form_for @post do |f| %>
        <div>
            <%= f.label :title %>
            <%= f.text_field :title %>
        </div>
            <%= f.label :body %>
            <%= f.text_area(:body, size: "60x20") %>
            <%= f.hidden_field(:user_id, value: @post.user_id)%>
        <p>
            <%= f.submit %>
        </p>
    <% end %>
</main>
