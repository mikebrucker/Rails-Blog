<% content_for :title do "#{@current_user.username}'s New Post" end %>

<main class="create_post">
    <h2>New Post</h2>
    <%= form_for @post do |f| %>
        <div>
            <%= f.label :title %>
            <%= f.text_field :title %>
        </div>
        <div>
            <%= f.label :body %>
        </div>
            <%= f.text_area :body %>
            <%= f.hidden_field(:user_id, value: @current_user.id)%>
        <p>
            <%= f.submit %>
        </p>
    <% end %>
</main>
