<%= form_for @user do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.label(:password, "New Password") %>
    <%= f.password_field :password %>
    <%= label_tag(:confirm_password, "Old Password") %>
    <%= password_field_tag(:confirm_password) %>
    <%= f.submit %>
<% end %>