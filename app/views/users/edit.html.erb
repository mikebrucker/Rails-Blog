<% content_for :title do "Edit #{@user.username}" end %>
<main class="form">
    <%= form_for @user do |f| %>
        <div>
            <%= f.label :username %>
            <%= f.label :email %>
            <%= f.label :password, "New Password" %>
            <%= label_tag :confirm_password, "Confirm Password" %>
            <%= label_tag :confirm_password, "Old Password" %>
        </div>
        <div>
            <%= f.text_field :username %>
            <%= f.text_field :email %>
            <%= f.password_field :password %>
            <%= password_field_tag :confirm_password %>
            <%= password_field_tag :old_password %>
        </div>
        <p>
            <%= f.submit %>
        </p>
    <% end %>
</main>
